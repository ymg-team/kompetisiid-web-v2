{
    "compilerOptions": {
      "target": "es2017",
      "allowSyntheticDefaultImports": false,
      "baseUrl": "./",
      "paths": {
        "@components/*": ["./src/components/*"],
        "@configs/*": ["./src/config/*"],
        "@services/*": ["./src/services/*"],
        "@helpers/*": ["./src/helpers/*"],
        "~/*": ["./*"],
        "~":  ["./"],
      },
      "jsx": "react"
    },
    "exclude": ["node_modules", "_next"]
  }
  